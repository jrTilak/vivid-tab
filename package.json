{
  "name": "vivid-tab",
  "displayName": "Vivid Tab",
  "version": "1.2.0",
  "description": "\"VividTab: Your dynamic new tab for a brighter, more productive browsing experience.\"",
  "author": "jrTilak <contact@jrtilak.dev>",
  "scripts": {
    "dev": "cross-env PLASMO_PUBLIC_FIREFOX_ADDON_URL='chrome' plasmo dev",
    "dev:f": "cross-env PLASMO_PUBLIC_FIREFOX_ADDON_URL='chrome' plasmo dev --target=firefox-mv3",
    "build": "cross-env PLASMO_PUBLIC_FIREFOX_ADDON_URL='chrome' plasmo build",
    "build:f": "cross-env PLASMO_PUBLIC_FIREFOX_ADDON_URL='chrome' plasmo build --target=firefox-mv3",
    "package": "plasmo package",
    "format": "prettier --write .",
    "lint": "eslint .",
    "postinstall": "node scripts/patch.js",
    "build:css": "tailwindcss -i ./src/styles/index.css -o ./build/chrome-mv3-prod/minified.css --minify"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@radix-ui/react-alert-dialog": "^1.1.15",
    "@radix-ui/react-avatar": "^1.1.11",
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-context-menu": "^2.2.16",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.8",
    "@radix-ui/react-slider": "^1.3.6",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-switch": "^1.2.6",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "lucide-react": "^0.471.2",
    "motion": "^11.18.2",
    "plasmo": "0.90.5",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-hotkeys-hook": "^5.2.1",
    "tailwind-merge": "^2.6.0",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@tailwindcss/postcss": "^4.1.17",
    "@types/chrome": "0.0.258",
    "@types/node": "20.11.5",
    "@types/react": "18.2.48",
    "@types/react-dom": "18.2.18",
    "@typescript-eslint/parser": "^8.47.0",
    "cross-env": "^10.1.0",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-unicorn": "^56.0.1",
    "eslint-plugin-unused-imports": "^4.3.0",
    "globals": "^15.15.0",
    "knip": "^5.69.1",
    "postcss": "^8.5.6",
    "prettier": "3.2.4",
    "tailwindcss": "^4.1.17",
    "tw-animate-css": "^1.4.0",
    "typescript": "5.3.3",
    "typescript-eslint": "^8.46.4"
  },
  "manifest": {
    "host_permissions": [
      "https://*/*"
    ],
    "permissions": [
      "bookmarks",
      "storage",
      "unlimitedStorage",
      "search",
      "topSites",
      "tabs",
      "alarms"
    ],
    "optional_permissions": [
      "history"
    ],
    "browser_specific_settings": {
      "gecko": {
        "id": "vividtab@jrtilak.dev"
      }
    }
  },
  "packageManager": "pnpm@9.15.3+sha512.1f79bc245a66eb0b07c5d4d83131240774642caaa86ef7d0434ab47c0d16f66b04e21e0c086eb61e62c77efc4d7f7ec071afad3796af64892fae66509173893a"
}
